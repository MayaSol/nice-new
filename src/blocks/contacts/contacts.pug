//- Все примеси в этом файле должны начинаться c имени блока (contacts)

mixin contacts(mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +contacts('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' contacts--' + modsList[i].trim();
      }
    }

  section.contacts(class=allMods)&attributes(attributes)
    block


mixin contacts-item(props)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +contacts('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(props.mods) !== 'undefined' && props.mods) {
      var modsList = props.mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' contacts__item--' + modsList[i].trim();
      }
    }

  .contacts__item(class=allMods)&attributes(attributes)
    svg(width=props.width height=props.height)
      use(xlink:href="img/sprite.svg#" + props.icon)
    .contacts__item-content
      block
